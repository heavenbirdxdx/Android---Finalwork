<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePersonInfo"
    android:background="#ffffff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/portrait"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:padding="1dp"
        app:srcCompat="@mipmap/head"
        android:background="@drawable/bg_border"
        android:layout_gravity="center_horizontal"/>

    <!--By yxd-->
    <!--更换头像-->

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/btn_portrait"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        app:borderWidth="0.0dip"
        app:layout_anchorGravity="bottom|center"
        app:elevation="10dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/portrait_btn"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="80dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/id"
            android:layout_gravity="center" />

        <EditText
            android:id="@+id/edit_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#3C3A3A"
            android:textSize="17dp"
            android:layout_gravity="bottom"
            android:textAlignment="center"
            android:fontFamily="monospace"
            android:layout_marginLeft="14dp"
            android:singleLine="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginRight="76dp"
        android:layout_marginLeft="80dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/name"
            android:layout_gravity="center" />
        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#3C3A3A"
            android:textSize="17dp"
            android:textAlignment="center"
            android:layout_gravity="bottom"
            android:layout_marginLeft="14dp"
            android:fontFamily="monospace"
            android:singleLine="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="60dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/birth"
            android:layout_gravity="center" />
        <EditText
            android:id="@+id/edit_birth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#3C3A3A"
            android:textSize="17dp"
            android:hint="YYYY-MM-DD"
            android:textAlignment="center"
            android:layout_gravity="bottom"
            android:layout_marginLeft="14dp"
            android:fontFamily="monospace"
            android:singleLine="true"/>
    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/btn_save"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="70dp"
        android:layout_gravity="bottom|center"
        app:borderWidth="0.0dip"
        app:elevation="10dp"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/save"/>

</LinearLayout>